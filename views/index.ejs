<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="css/project.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Smart Home</title>
  </head>
  <body class="body">
    
    <div class="titlename">
      <section class="wrapper">
        <div class="top">Smart Homie</div>
        <div class="bottom" aria-hidden="true">Smart Homie</div>
      </section>
    </div>
    <div style="overflow:auto">
      <%- include ('layouts/menu') -%>
    <main class="main">
      <!--<section class="wrapper">
        <div class="top">Smart Home</div>
        <div class="bottom" aria-hidden="true">Smart Home</div>
      </section>
    -->
      <div class="spacing">
        <h3 id="date_display"></h3>
      </div>
      <form id = "index-form" action="/update-index" method="post">
        <div class="spacing">
          <label>Notifications</label>
          <input type="checkbox" id="notifications" name="notifications" checked />
        </div>
      <div class="spacing">
        <div>
          <label>Power Mode</label>
        </div>
        <div>
          <div>
            <label for="off">Off</label>
            <input type="radio" id="off" name="lighting_mode" value="Off" />
          </div>
          <div>
            <label for="away">Away</label>
            <input type="radio" id="css" name="lighting_mode" value="Away" />
          </div>
          <div>
            <label for="eco">Economy</label>
            <input
              type="radio"
              id="eco"
              name="lighting_mode"
              value="Eco"
              checked
            />
          </div>
          <div>
            <label for="full">Full</label>
            <input type="radio" id="full" name="lighting_mode" value="Full" />
          </div>
        </div>
      </div>
        <div class="spacing">
          <label>Location</label>
          <input
            type="text"
            id="location"
            placeholder="Postal Code"
            value="L7W 4T8"
            name = "location"
          /><span id="location_error" class="error-span"></span>
        </div>
        <div class="spacing">
          <label>Temperature</label>
          <input
            type="number"
            id="temperature"
            name="temperature"
            min="5"
            max="30"
            step="0.5"
            value="21"
          /><span id="temperature_error" class="error-span"></span>
        </div>
        <div class="spacing">
          <label></label>
          <button type="submit" value="Update" id="update_settings" class="btn btn-warning">Submit</button>
          <button type="reset" value="Reset" id="reset_form" class="btn btn-warning">Reset</button>
        </div>
        <h2 class="spacing">Temporary Temp</h2>
        <div class="spacing">
          <label for="time">Enter time (hh:mm):</label>
          <input type="text" id="time" name="time" placeholder="00:00" class="form-control">
          
        </div>
        <div id="tempTemperature" class="spacing">
          <label for="temp">Enter Temperature:</label>
          <input 
            type="number"
            id="temp" 
            name="temp"
            min="5"
            max="30"
            step="0.5" 
            placeholder="21°C"
            class="form-control">
        </div>
        
        <div>
          <label></label>
          <button  type="button" class="btn btn-outline-primary" onclick="TempTimerFunction()">Start</button>
        </div>
        <p id="tempTimer"></p>
      </form>
      
    </main>
    <div class="right">
      <h2>Current Settings</h2>
      <div>
        <% if(user) { %>
          <p>Notifications: <%= user.notifications %></p> 
          <%} else { %>
            <p>Notifications: Off</p>
          <%} %>
        <span class="current-setting" id="setting_notifications"></span>
      </div>
      <div>
        <% if(user) { %>
          <p>Lightning Mode <%= user.lighting_mode %></p> 
          <%} else { %>
            <p>Lighting Mode: Off</p>
          <%} %>
        <span class="current-setting" id="setting_lighting_mode"></span>
      </div>
      <div>
        <% if(user) { %>
          <p>Postal Code: <%= user.location %></p> 
          <%} else { %>
            <p>Postal Code: L0L 1P0</p>
          <%} %>
        <span class="current-setting" id="setting_location"></span>
      </div>
      <div>
        <% if(user) { %>
          <p>Temperature: <%= user.temperature %>°C</p> 
          <%} else { %>
            <p>Temperature: 21°C</p>
          <%} %>
        <span class="current-setting" id="setting_temperature"></span>
        
      </div>
       
      
      </div>
  </div>
    <%- include ('layouts/footer') -%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    <script src="js/dashboard.js"></script>
  </body>
</html>
